{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "eslint.config.mjs",
    "prettier.config.mjs",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "public", "resources"]
}
